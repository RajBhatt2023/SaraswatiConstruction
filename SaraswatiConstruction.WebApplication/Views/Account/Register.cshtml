<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <h4>New here?</h4>
                            <form id="registrationForm">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" id="InputFirstNameReg" name="FirstNameReg" placeholder="First Name">
                                    <label id="InputFirstNameReg-error" class="error text-danger" for="InputFirstNameReg"></label>

                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" id="InputLastNameReg" placeholder="Last Name" name="LastNameReg">
                                    <label id="InputLastNameReg-error" class="error text-danger" for="InputLastNameReg"></label>

                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-lg" placeholder="Email" name="EmailReg" id="InputEmailReg">
                                </div>
                               
                              @*   <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" placeholder="Password" name="PasswordReg" id="InputPasswordReg">
                                    <span toggle="#InputPasswordReg" class="fa fa-fw fa-eye-slash field-icon toggle-password"></span>

                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" placeholder="Confirm Password" name="ConfirmPasswordReg" id="InputConfirmPasswordReg">
                                    <span toggle="#InputConfirmPasswordReg" class="fa fa-fw fa-eye-slash field-icon toggle-password"></span>

                                </div> *@
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="password" class="form-control form-control-lg" placeholder="Password" name="PasswordReg" id="InputPasswordReg">
                                        <div class="input-group-append">
                                            <span class="input-group-text" style="height: 50px !important;">
                                                <i class="fa fa-fw fa-eye-slash toggle-password" id="togglePassword"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="password" class="form-control form-control-lg" placeholder="Confirm Password" name="ConfirmPasswordReg" id="InputConfirmPasswordReg">
                                        <div class="input-group-append">
                                            <span class="input-group-text" style="height: 50px !important;">
                                                <i class="fa fa-fw fa-eye-slash toggle-password" id="toggleConfirmPassword"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input"> I agree to all Terms & Conditions
                                        </label>
                                    </div>
                                </div>
                                <div class="mt-3 d-grid gap-2">
                                    <button class="btn btn-block btn-primary  btn-lg fw-medium auth-form-btn" type="button" onclick="Registration()">Register Now</button>
                                    @* <a class="btn btn-block btn-primary  btn-lg fw-medium auth-form-btn" onclick="Registration()" >Register Now</a> *@
                                </div>
                               
                            </form>
                            <div class="text-center mt-4 fw-light">
                                Already have an account? <a href="/Account/Login" class="text-primary">Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
